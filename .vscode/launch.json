{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm version",
            "name": "Local terminal with node_modules source maps",
            "request": "launch",
            "type": "node-terminal",
            "resolveSourceMapLocations": ["${workspaceFolder}/**/*"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Connector 1",
            "port": 9229,
            "sourceMaps": true,
            "restart": true,
            "localRoot": "${workspaceFolder}/dist",
            "remoteRoot": "/usr/app/dist",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Connector 2",
            "port": 9231,
            "sourceMaps": true,
            "restart": true,
            "localRoot": "${workspaceFolder}/dist",
            "remoteRoot": "/usr/app/dist",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
