{
    "debug": true,
    "transportLibrary": {
        "allowIdentityCreation": true
    },
    "database": {
        "connectionString": "mongodb://mongo:27017"
    },
    "infrastructure": {
        "httpServer": {
            "authentication": {
                "apiKey": {
                    "keys": {
                        "default": { "key": "This_is_a_test_APIKEY_with_30_chars+" },
                        "messages": { "key": "This_is_a_test_APIKEY_with_30_chars+onlyMessages", "scopes": ["core:messages"] }
                    }
                }
            }
        }
    },
    "modules": {
        "coreHttpApi": {
            "docs": {
                "enabled": true,
                "rapidoc": {
                    "persistAuth": true
                }
            }
        }
    }
}
