{
    "name": "@nmshd/connector-admin-cli",
    "version": "1.0.0",
    "description": "Admin cli for the enmeshed connector",
    "keywords": [
        "oclif"
    ],
    "homepage": "https://github.com/packages/connector-admin-cli",
    "bugs": "https://github.com/packages/connector-admin-cli/issues",
    "repository": "packages/connector-admin-cli",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "connector-admin": "./bin/run.js"
    },
    "files": [
        "/bin",
        "/dist",
        "/config",
        "/oclif.manifest.json"
    ],
    "scripts": {
        "build": "shx rm -rf dist tsconfig.tsbuildinfo && tsc -b && npm run compile-connector && npm run copy-statics",
        "build:ci": "npm run build",
        "build:watch": "npm run build && tsc -b --watch",
        "compile-connector": "ts-node connectorBundle.ts",
        "copy-statics": "shx cp -r ../../src/jsonSchemas dist/jsonSchemas && shx cp -r ../../config config",
        "prepack": "oclif manifest && oclif readme",
        "postpack": "shx rm -f oclif.manifest.json",
        "test": "jest && shx rm -rf local-default.db",
        "version": "oclif readme && git add README.md"
    },
    "jest": {
        "maxWorkers": 2,
        "preset": "ts-jest",
        "setupFilesAfterEnv": [],
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "testTimeout": 60000,
        "transform": {
            "^.+\\.ts$": [
                "ts-jest",
                {
                    "tsconfig": "test/tsconfig.json"
                }
            ]
        }
    },
    "oclif": {
        "bin": "connector-admin",
        "commands": "./dist/commands",
        "dirname": "connector-admin",
        "hooks": {
            "init": "./dist/hooks/init/init"
        },
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-autocomplete"
        ],
        "topicSeparator": " ",
        "topics": {
            "hello": {
                "description": "Say hello to the world and others"
            }
        }
    },
    "dependencies": {
        "@nmshd/transport": "^2.8.2",
        "@oclif/core": "^4.0.12",
        "@oclif/plugin-autocomplete": "3.1.7",
        "@oclif/plugin-help": "^6.2.6",
        "@oclif/plugin-plugins": "^5.3.7"
    },
    "devDependencies": {
        "@oclif/prettier-config": "^0.2.1",
        "@oclif/test": "^4.0.4",
        "esbuild": "0.23.0",
        "eslint": "^8.57.0",
        "eslint-config-oclif": "^5",
        "eslint-config-oclif-typescript": "^3",
        "eslint-config-prettier": "^9",
        "oclif": "^4",
        "shx": "^0.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
