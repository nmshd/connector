{
    "name": "@nmshd/connector-admin-cli",
    "version": "1.0.0",
    "description": "Admin cli for the enmeshed connector",
    "keywords": [
        "oclif"
    ],
    "homepage": "https://github.com/packages/connector-admin-cli",
    "bugs": "https://github.com/packages/connector-admin-cli/issues",
    "repository": "packages/connector-admin-cli",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "connector-admin": "./dist/index.js"
    },
    "files": [
        "/TODO"
    ],
    "scripts": {
        "build": "shx rm -rf dist tsconfig.tsbuildinfo && tsc -b && npm run compile-connector && npm run copy-statics",
        "build:ci": "npm run build",
        "build:watch": "npm run build && tsc -b --watch",
        "compile-connector": "ts-node connectorBundle.ts",
        "copy-statics": "shx cp -r ../../src/jsonSchemas dist/jsonSchemas && shx cp -r ../../config config",
        "prepack": "oclif manifest && oclif readme",
        "postpack": "shx rm -f oclif.manifest.json",
        "test": "jest && shx rm -rf local-default.db",
        "version": "oclif readme && git add README.md"
    },
    "jest": {
        "maxWorkers": 2,
        "preset": "ts-jest",
        "setupFilesAfterEnv": [],
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "testTimeout": 60000,
        "transform": {
            "^.+\\.ts$": [
                "ts-jest",
                {
                    "tsconfig": "test/tsconfig.json"
                }
            ]
        }
    },
    "dependencies": {
        "@nmshd/runtime": "4.14.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/yargs": "^17.0.32",
        "esbuild": "0.23.0",
        "shx": "^0.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
