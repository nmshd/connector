{
    "debug": true,
    "transportLibrary": {
        "debug": true
    },
    "logging": {
        "appenders": {
            "consoleAppender": {
                "type": "stdout",
                "layout": { "type": "pattern", "pattern": "%[[%d] [%p] %c - %m%]" }
            },
            "console": {
                "type": "logLevelFilter",
                "level": "ERROR",
                "appender": "consoleAppender"
            }
        },

        "categories": {
            "default": {
                "appenders": ["console"],
                "level": "TRACE"
            }
        }
    },
    "infrastructure": { "httpServer": { "enabled": true } },
    "modules": {
        "coreHttpApi": {
            "docs": {
                "enabled": true
            }
        },
        "webhooks": {
            "displayName": "Webhooks",
            "enabled": true,
            "location": "webhooks/WebhooksModule",
            "targets": {
                "testTarget": {
                    "url": "http://localhost:3769/"
                }
            },
            "webhooks": [
                {
                    "triggers": ["**"],
                    "target": "testTarget"
                }
            ]
        }
    }
}
