{
    "debug": true,
    "transportLibrary": {
        "debug": true,
        "allowIdentityCreation": true
    },
    "logging": {
        "appenders": {
            "consoleAppender": {
                "type": "stdout",
                "layout": { "type": "pattern", "pattern": "%[[%d] [%p] %c - %m%]" }
            },
            "console": {
                "type": "logLevelFilter",
                "level": "INFO",
                "appender": "consoleAppender"
            }
        },

        "categories": {
            "default": {
                "appenders": ["console"],
                "level": "TRACE"
            }
        }
    },
    "infrastructure": { "httpServer": { "enabled": true } },
    "modules": {
        "coreHttpApi": { "docs": { "enabled": true } },
        "webhooks": {
            "enabled": false,
            "webhooks": [{ "triggers": ["consumption.outgoingRequestCreated", "transport.relationshipChanged", "transport.messageReceived"], "target": "test" }],
            "targets": {
                "test": {
                    "headers": { "Content-Type": "application/json" }
                }
            }
        }
    }
}
