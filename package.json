{
    "name": "@nmshd/connector",
    "version": "2.3.6",
    "private": true,
    "description": "The Enmeshed Business Connector",
    "homepage": "https://enmeshed.eu/integrate",
    "repository": "github:nmshd/cns-connector",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "scripts": {
        "lint": "npm run lint:tsc && npm run lint:prettier && npm run lint:eslint",
        "lint:prettier": "prettier --check ./src ./test ./packages/*/src",
        "lint:eslint": "eslint --ext .ts ./src ./test ./packages/*/src",
        "lint:tsc": "lerna run build:ci && tsc --noEmit && tsc -p test/tsconfig.json --noEmit",
        "build": "run-p tsc copy-additional-files",
        "build:watch": "run-p -r tsc:watch copy-additional-files:watch",
        "copy-additional-files": "npx cpx \"src/**/*.{json,yml,ico}\" dist",
        "copy-additional-files:watch": "npx cpx \"src/**/*.{json,yml,ico}\" dist --watch",
        "tsc": "tsc",
        "tsc:watch": "tsc -w",
        "test:ci": "npm run build && jest -i",
        "test:local": "npm run build && . scripts/testSetup.sh && jest",
        "generate:connectorConfigSchema": "npx ts-json-schema-generator -p ./src/jsonSchemas/connectorConfig.ts -o ./src/jsonSchemas/connectorConfig.json -t \"ConnectorConfig\" --no-top-ref && prettier -w src/jsonSchemas/connectorConfig.json"
    },
    "jest": {
        "maxWorkers": 2,
        "preset": "ts-jest",
        "setupFilesAfterEnv": [
            "@alex_neo/jest-expect-message"
        ],
        "testEnvironment": "node",
        "testTimeout": 60000
    },
    "dependencies": {
        "@js-soft/docdb-access-mongo": "1.0.5",
        "@js-soft/node-logger": "1.0.1",
        "@js-soft/ts-utils": "1.1.1",
        "@nmshd/runtime": "1.4.2",
        "agentkeepalive": "4.2.1",
        "axios": "^0.27.2",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "express": "4.18.1",
        "helmet": "5.0.2",
        "json-stringify-safe": "5.0.1",
        "jsonschema": "1.4.0",
        "nconf": "0.12.0",
        "on-headers": "1.0.2",
        "rapidoc": "9.2.0",
        "reflect-metadata": "0.1.13",
        "swagger-ui-express": "4.3.0",
        "typescript": "4.6.4",
        "typescript-ioc": "3.2.2",
        "typescript-rest": "3.0.4",
        "typescript-rest-ioc": "1.0.1",
        "yamljs": "0.3.0"
    },
    "devDependencies": {
        "@alex_neo/jest-expect-message": "^1.0.5",
        "@js-soft/eslint-config-ts": "1.5.2",
        "@js-soft/license-check": "1.0.4",
        "@nmshd/connector-sdk": "1.2.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/express": "4.17.13",
        "@types/helmet": "0.0.48",
        "@types/jest": "^27.5.0",
        "@types/jest-expect-message": "^1.0.3",
        "@types/jest-json-schema": "^6.1.0",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/luxon": "^2.3.2",
        "@types/nconf": "^0.10.2",
        "@types/node": "^17.0.31",
        "@types/on-headers": "^1.0.0",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/wait-on": "^5.3.1",
        "@types/yamljs": "^0.2.31",
        "better-lerna-audit": "^1.0.0",
        "eslint": "^8.14.0",
        "get-port": "^5.1.1",
        "jest": "^28.0.3",
        "jest-json-schema": "^6.1.0",
        "lerna": "^4.0.0",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.1",
        "ts-node": "^10.7.0",
        "wait-on": "^6.0.1"
    }
}
